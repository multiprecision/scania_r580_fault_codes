<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- focused -->
    <item
        android:state_focused="true"
        android:state_pressed="false">
        <shape>
            <solid
                android:color="#a3dbff" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


    <!-- pressed -->
    <item
        android:state_focused="false"
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#4c82a4" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- pressed and focused -->
    <item
        android:state_focused="true"
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#4c82a4" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape>
            <gradient
            android:startColor="#8cd4fa"
            android:endColor="#6393b1"
            android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
        </item>


</selector>
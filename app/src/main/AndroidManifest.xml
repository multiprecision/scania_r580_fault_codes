<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kppmining.scania_r580_fault_codes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Main">
        <activity
            android:name="com.kppmining.scania_r580_fault_codes.main_activity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kppmining.scania_r580_fault_codes.search_result_activity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/Main" />
        <activity
            android:name="com.kppmining.scania_r580_fault_codes.pdf_viewer_activity"
            android:label="@string/title_activity_pdf_viewer_activity"
            android:theme="@style/Main" />
    </application>

</manifest>